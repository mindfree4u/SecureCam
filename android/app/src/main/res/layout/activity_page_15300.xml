<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical"
    tools:context=".Page_15300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="11.1dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_marginTop="7dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="38.17dp"
            android:fontFamily="@font/notosanskrmedium"
            android:gravity="center"
            android:textFontWeight="400"
            android:text="라이브뷰 영상조정"
            android:textColor="#222222"
            android:textSize="18sp"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <SurfaceView
            android:id="@+id/combined_surface_view"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        android:weightSum="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingBottom="20dp"
            android:background="@drawable/liveview_linear_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="초점"
                    android:textColor="#4F4F4F"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/focus_minus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/liveview_set_button"/>

                <TextView
                    android:id="@+id/focus_txt"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="초점"
                    android:textColor="#322E7F"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:typeface="normal" />

                <ImageButton
                    android:id="@+id/focus_plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/liveview_set_button"/>
             </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingBottom="20dp"
            android:background="@drawable/liveview_linear_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="확대"
                    android:textColor="#4F4F4F"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/enlargement_minus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/liveview_set_button"/>

                <TextView
                    android:id="@+id/enlargement_txt"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="확대"
                    android:textColor="#322E7F"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:typeface="normal" />

                <ImageButton
                    android:id="@+id/enlargement_plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/liveview_set_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"


        android:weightSum="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="-1dp"
            android:paddingTop="7dp"
            android:paddingBottom="20dp"
            android:background="@drawable/liveview_linear_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="밝기"
                    android:textColor="#4F4F4F"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/bright_minus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/liveview_set_button"/>

                <TextView
                    android:id="@+id/brightness_txt"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="밝기"
                    android:textColor="#322E7F"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:typeface="normal" />

                <ImageButton
                    android:id="@+id/bright_plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/liveview_set_button"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="-1dp"
            android:paddingTop="7dp"
            android:paddingBottom="20dp"
            android:background="@drawable/liveview_linear_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="대비"
                    android:textColor="#4F4F4F"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/contrast_minus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:background="@drawable/liveview_set_button"/>

                <TextView
                    android:id="@+id/contrast_txt"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/notosanskr"
                    android:text="대비"
                    android:textColor="#322E7F"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:typeface="normal" />

                <ImageButton
                    android:id="@+id/contrast_plus_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/liveview_set_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>